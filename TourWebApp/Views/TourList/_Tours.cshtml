@model IEnumerable<Tour>

@{
    ViewData["Title"] = "_Tours";
}

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinDuration)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Type.Label)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MinDuration)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.TourID">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.TourID">Details</a> |
                    <a asp-action="Index" asp-controller="Location_Tour" asp-route-id="@item.TourID">Locations</a> |
                    <a asp-action="Copy" asp-route-id="@item.TourID">Copy to new</a> |
                    <a asp-action="Delete" asp-route-id="@item.TourID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

